{# establecimientos en los que se dicta una carrera #}
{# recibe como parametro las unidades_ofertas de donde se sacan los establecimientos #}
<fieldset>
    <legend class="resaltado">Establecimientos en los que se dicta</legend>
    {% for establecimiento in establecimientos_array %}
        
        <div class="separador">
            
            {# muestra el nombre de cada establecimiento #}
            <a href="{{ path('establecimiento_ficha', {'establecimiento_id': establecimiento['establecimiento_id'] }) }}">
                {{ establecimiento['establecimiento_nombre'] }}
                {{ establecimiento['cue_anexo']['digito'] == '01' ? ' - ' ~ establecimiento['localizacion_nombre'] }}
            </a>
            
            {# muestra el turno de cada establecimento           #}
            {% include 'EstablecimientoBundle:Default:includes/turnos_carreras.html.twig' with {'unidad_oferta': establecimiento } %}
        </div>
    {% endfor %}  
</fieldset>