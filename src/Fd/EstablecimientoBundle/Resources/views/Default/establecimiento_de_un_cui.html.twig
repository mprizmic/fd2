{% extends '::layout.html.twig' %}

{% block main_content %}
{{ parent() }}

<div class="titulo float_izquierda">Establecimientos que funcionan en el edificio</div>

<div class="limpiar_float"></div>
<br />
<span class="mediana">
{% render "EdificioBundle:Default:tarjeta_edificio" with {'edificio_id': edificio_id} %}
</span>
<br />

{% for establecimiento in establecimientos %}

<span class="mediana"><a href="{{ path('establecimiento_ficha', {'establecimiento_id': establecimiento.id }) }}">{{ establecimiento.nombre }}</a></span><br />
    CUE: {{ establecimiento.cue }}<br />
    Distrito escolar: {{ establecimiento.distritoEscolar }}<br/>
    <span class="resaltado">Niveles:</span><br/>
        {% for unidad in establecimiento.unidadesEducativas %}
            <span class="separador"></span>{{unidad.nivel.nombre}}<br/>
        {% endfor %}    
    <br />
    <br />
{% endfor %}

{% include '::includes/volver.html.twig' %}
    
{% endblock %}