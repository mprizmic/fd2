{# listado de establecimientos que cumplen aniversarios #}

{% extends '::layout.html.twig' %}

{% block main_content %}
{{ parent() }}

<div class="titulo float_izquierda">Aniversarios significativos</div>

<br />
<br />

<div class="float_izquierda instrucciones">
    {{ 'Los aniversarios que se tienen en cuenta son: '}}
    {% for anio in intervalos %}
        {{ anio }}
        {% if not loop.last %}
            {{ ', ' }}
        {% else %}
            {{ ' años' }}
        {% endif %}
    {% endfor %}
        
</div>
    
<div class="limpiar_float">
    
<br /><br />

<table class="grilla">
    <tr>
        <th>Año</th>
        <th>Aniversario</th>
        <th>Establecimiento</th>
        <th>Fecha de creación</th>
    </tr>

    {% for aniversario in aniversarios %}
    <tr>
        <td>{{ aniversario['anio_calendario'] }}</td>
        <td>{{ aniversario['aniversario'] ~ ' años'}}</td>
        <td>{{ aniversario['apodo'] }}</td>
        <td>{{ aniversario['fecha_creacion'] }}</td>
    </tr>
    {% endfor %}
</table>

<br /><br />

{% if establecimientos_sin_fecha | length > 0 %}
    <div class="resaltado">
        Establecimientos que no tienen la fecha de creación cargada:
    </div>
    <div>
        {% for sin_fecha in establecimientos_sin_fecha %}
            {{ sin_fecha['apodo'] }}
            <br />
        {% endfor %}
    </div>
{% endif %}

<br /><br />

{% endblock %}