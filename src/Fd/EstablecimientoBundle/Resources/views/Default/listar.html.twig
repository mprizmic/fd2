{% extends '::layout.html.twig' %}

{% block main_content %}
{{ parent() }}

<div class="titulo float_izquierda">NÃ³mina de establecimientos</div>

<div class="limpiar_float"></div>
<br />

<table class="grilla">
    <tr>
        <th>Establecimiento</th>
        <th>Turnos</th>
        <th>Carreras</th>
<!--        <th>Url</th> -->
    </tr>
    {% set establecimientos = entities %}
    {% for establecimiento in establecimientos %}
    <tr>
        <td>{{ establecimiento.apodo }}</td>
        <td>
           {% set terciario = establecimiento.getTerciario() %}
            {% for turno in terciario.turnos %}
                    {{ turno.turno.descripcion }}
                    {% if not loop.last %}{{ ' - ' }}{% endif %}
            {% else %}
                {{ ' s/d' }}
            {% endfor %} 
        </td>
        <td>
            {% for oferta in terciario.ofertas %}
{#                Puede haber ofertas de terciario que no sean carreras sino especializaciones#}
                {% if oferta.getOfertas.carrera is not null %}
                    {{ oferta.getOfertas.carrera }}<br />
                {% endif %}  
            {% endfor %}  
        </td>
    </tr>
    {% endfor %}
</table>


