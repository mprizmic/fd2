{{ "{% block content %}" }}

    <div class="row">
        <div class="col-md-12">
            <div id="filters" class="collapse">
                <form class="well" action="{{ path('sector') }}" method="post" {{ form_enctype(filterForm) }}>
                    {{ form_widget(filterForm) }}
                    <div class="btn-toolbar">
                        <div class="btn-group">
                            <button class="btn btn-primary" type="submit" name="filter_action" value="filter">Filtrar</button>
                            <button class="btn btn-default" type="submit" name="filter_action" value="reset">Limpiar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    {% if filterForm.vars.errors | length > 0 %}
        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-danger in form-errors">
                    {{ form_errors(filterForm) }}
                </div>
                &nbsp;
            </div>
        </div>
    {% endif %}


    <div class="row">
        <div class="col-md-12">

            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Descripcion</th>
                        <th>Abreviatura</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {% for entity in entities %}
                        <tr>
                            <td><a href="{{ path('sector_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                            <td>{{ entity.descripcion }}</td>
                            <td>{{ entity.abreviatura }}</td>
                            <td>
                                <a class="btn btn-default" href="{{ path('sector_show', { 'id': entity.id }) }}">
                                    {{ 'Ver' }}
                                </a>
                                <a class="btn btn-default" href="{{ path('sector_edit', { 'id': entity.id }) }}">
                                    {{ 'Editar' }}
                                </a>            
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

        </div>

        <div class="col-md-9">
            {{ pagerHtml|raw }}
        </div>

        <div class="col-md-3">
            <a class="btn btn-primary pull-right" href="{{ path('sector_new') }}">
                {{ 'Crear' }} Sector
            </a>
        </div>
    </div>

{{ "{% endblock %}" }}