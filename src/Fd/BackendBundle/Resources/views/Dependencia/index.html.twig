    <div class="boton_verde float_derecha">
        <a href="{{ path('backend.dependencia.new') }}">Crear nueva dependencia</a>
    </div>
    <span class="limpiar_float"></span>

    <br />
    <br />
    <table class="grilla">
        <thead>
            <tr>
