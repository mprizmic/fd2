{% extends 'BackendBundle::layout.html.twig' %}
 
{% block main_content %}

<h1>Aviso</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Descripci√≥n</th>
            <td>{{ entity.descripcion }}</td>
        </tr>
        <tr>
            <th>Fecha</th>
            <td>{{ entity.fecha|date('d-m-Y') }}</td>
        </tr>
        <tr>
            <th>Activo</th>
            <td>{{ entity.activo ? 'Si' : 'No' }}</td>
        </tr>
    </tbody>
</table>        

<ul class="record_actions">
    <li>
        <a href="{{ path('backend_aviso') }}">
            Volver a la lista
        </a>
    </li>
    <li>
        <a href="{{ path('backend_aviso_edit', { 'id': entity.id }) }}">
            Editar
        </a>
    </li>
    <li>
        <form action="{{ path('backend_aviso_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit" class="boton_rojo">Eliminar</button>
        </form>
    </li>
</ul>
{% endblock %}