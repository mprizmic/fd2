{% extends 'BackendBundle::layout.html.twig' %}

{% block main_content %}

    <div class="titulo">Editar una frase</div>
    <br />

    <form class="well" action="{{ path('backend_frase_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <div class="ancho_5">
            {{ form_widget(edit_form) }}
        </div>
        <p>
            <button type="submit">Guardar</button>
        </p>
    </form>

    <form action="{{ path('backend_frase_delete', { 'id': entity.id }) }}" method="post">
        {{ form_widget(delete_form) }}
        <button type="submit" class="boton_rojo">Eliminar</button>
        <a class="separador" href="{{ path('backend_frase') }}">Volver a la lista</a>
    </form>
    <br />
{% endblock %}