{% extends 'BackendBundle::layout.html.twig' %}

{% block title %}
    {{ parent() }} - Editar Modalidad
{% endblock %}

{% block main_content %}
    {{ parent() }}

    <h1>Editar una modalidad</h1>

    <form action="{{ path('backend_modalidad_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <div class="ancho_10">
            {{ form_widget(edit_form) }}
        </div>
        <p>
            <button type="submit">Guardar</button>
        </p>
    </form>

    <form action="{{ path('backend_modalidad_delete', { 'id': entity.id }) }}" method="post">
        {{ form_widget(delete_form) }}
        <button type="submit" class="boton_rojo">Eliminar</button>
        <a class="separador" href="{{ path('backend_modalidad') }}">
            Volver a la lista
        </a>
    </form>
            <br />
            <br />

{% endblock %}