{% extends 'BackendBundle::layout.html.twig' %}

{% block main_content %}
    {{ parent() }}

    <div class="titulo">Crear nuevo domicilio</div>

    <form action="

          {# si la clave de edificio esta informada hay que crear el domicilio con el edificio seteado #}
          {% if edificio_id is not defined %}

              {{ path('backend_domicilio_create') }}
          {% else %}
              {{ path('backend_domicilio_create', {'edificio_id':edificio_id}) }}
          {% endif %}

          " method="post" {{ form_enctype(form) }}>
        <div class="ancho_10">
            {{ form_widget(form) }}
        </div>

        <p class="separador">
            <button type="submit">Crear</button>
            <a class="separador" href="{{ path('backend_domicilio') }}">Volver a la lista</a>
        </p>
    </form>

    <br />

{% endblock %}
