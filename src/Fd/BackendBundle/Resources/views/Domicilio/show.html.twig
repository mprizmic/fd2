{% extends 'BackendBundle::layout.html.twig' %}

{% block main_content %}
    {{ parent() }} 

    <div class="titulo">Domicilio</div>

    <fieldset>
        <table class="record_properties">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Calle</th>
                    <td>{{ entity.calle }}</td>
                </tr>
                <tr>
                    <th>Altura</th>
                    <td>{{ entity.altura }}</td>
                </tr>
                <tr>
                    <th>C. Postal</th>
                    <td>{{ entity.cPostal }}</td>
                </tr>
                <tr>
                    <th>Principal</th>
                    <td>{{ entity.principal }}</td>
                </tr>
            </tbody>
        </table>
    </fieldset>

    <br />
    <div>

        <form action="{{ path('backend_domicilio_delete', { 'id': entity.id }) }}" method="post">
            
            <a class="separador" href="{{ path('backend_domicilio_edit', { 'id': entity.id }) }}">Editar</a>
            
            <div class="invisible">
            {{ form_widget(delete_form) }}
            </div>
            
            <button type="submit" class="separador boton_rojo">Eliminar</button>
            
            <a class="separador" href="{{ path('backend_domicilio') }}">Volver a la lista</a>
        </form>
    </div>

    {% include '::includes/volver.html.twig' %}

{% endblock %}