{% extends 'BackendBundle::layout.html.twig' %}

{% block title %}
{{ parent() }} - Editar Barrio
{% endblock %}

{% block main_content %}

<h1>Editar Barrio</h1>
<div class="los_label">
    <form action="{{ path('backend_barrio_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        {{ form_widget( edit_form ) }}
        <p>
            <button type="submit">Guardar</button>
        </p>
    </form>

</div>

<ul class="record_actions">
    <li>
        <a href="{{ path('backend_barrio') }}">
            Volver a la lista
        </a>
    </li>
    <li>
        <form action="{{ path('backend_barrio_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit" class="boton_rojo">Eliminar</button>
        </form>
    </li>
</ul>

{% endblock %}