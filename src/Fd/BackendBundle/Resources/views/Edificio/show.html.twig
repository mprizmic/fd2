{% extends 'BackendBundle::layout.html.twig' %}
 
{% block title %}
{{ parent() }} - Edificio
{% endblock %}
 
{% block main_content %}

<h1>Edificio</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Cui</th>
            <td>{{ entity.cui }}</td>
        </tr>
        <tr>
            <th>Superficie</th>
            <td>{{ entity.superficie }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('backend_edificio') }}">
            Volver a la lista
        </a>
    </li>
    <li>
        <a href="{{ path('backend_edificio_edit', { 'id': entity.id }) }}">
            Editar
        </a>
    </li>
    <li>
        <form action="{{ path('backend_edificio_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit" class="boton_rojo">Eliminar</button>
        </form>
    </li>
</ul>

{% endblock %}