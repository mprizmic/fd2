{% extends 'BackendBundle::layout.html.twig' %}

{% block title %}
    {{ parent() }} - Editar Edificio
{% endblock %}

{% block main_content %}
    {{ parent() }}

    <div class="titulo">Editar un edificio</div>

    <form action="{{ path('backend_edificio_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <div class="ancho_10">
            {{ form_widget(edit_form) }}
        </div>

        <br />

        <!--            -->
        <!-- domicilios -->
        <!--            -->
        {% set domicilios = entity.domicilios %}
        <fieldset>
            <legend class="resaltado">Domicilios</legend>
            {% for domicilio in domicilios %}
                <a href="{{ path( 'backend_domicilio_edit', {'id': domicilio.id} ) }}">{{ domicilio }}</a><br />
            {% endfor %}
        </fieldset>

        <br />
        <br />

        <p class="separador">
            <button type="submit">Guardar</button>
        </p>
    </form>

    <form action="{{ path('backend_edificio_delete', { 'id': entity.id }) }}" method="post">
        <div class="invisible">
            {{ form_widget(delete_form) }}
        </div>

        <button type="submit" class="separador boton_rojo">Eliminar</button>
        <a class="separador" href="{{ path('edificio_ficha', {'id': entity.id} ) }}">Volver al establecimiento</a>
        <a class="separador" href="{{ path('backend_edificio') }}">Volver a la lista de edificios</a>
        <a class="separador" href="{{ path('backend_edificio_new') }}">Crear nuevo edificio</a>
    </form>

    <br />

{% endblock %}