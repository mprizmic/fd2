{% extends 'BackendBundle::layout.html.twig' %}

{% block title %}
{{ parent() }} - Lista de Edificio
{% endblock %}

{% block main_content %}
{{ parent() }}

<h1>Lista de Edificio</h1>

<ul>
    <li>
        <a href="{{ path('backend_edificio_new') }}">
            Crear nuevo registro
        </a>
    </li>
</ul>

<table class="grilla">
    <thead>
        <tr>
            <th>Id</th>
            <th>Cui</th>
            <th>Domicilio</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
            <tr>
                <td><a href="{{ path('backend_edificio_edit', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.cui }}</td>
                <td>{{ entity.domicilioPrincipal }}</td>
                <td>
                    <a href="{{ path('backend_edificio_edit', { 'id': entity.id }) }}">
                        Editar
                    </a>
                </td>
            </tr>
    {% endfor %}
        </tbody>
    </table>

{% endblock %}
