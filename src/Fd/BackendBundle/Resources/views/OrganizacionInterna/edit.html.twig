{% extends 'BackendBundle::layout.html.twig' %}
 
{% block title %}
{{ parent() }} - Editar Autoridad
{% endblock %}
 
{% block main_content %}
{{ parent() }}

<div class="titulo">Editar una autoridad de establecimiento</div>

<form action="{{ path('backend_autoridad_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <div class="ancho_10">
            {{ form_widget(edit_form) }}
        </div>
        <br />
        <div class="separador">
            <button type="submit">Guardar</button>
        </div>
</form>

<form action="{{ path('backend_autoridad_delete', { 'id': entity.id }) }}" method="post">
    {{ form_widget(delete_form) }}
    <span class="separador">
        <input type="submit" class="boton_rojo" value="Eliminar" onsubmit="return confirm('EstÃ¡ seguro?')" />
    </span>
    <a class="separador" href="{{ path('backend_autoridad_buscar') }}">
        Volver
    </a>
</form>


<span class="limpiar_float"></span>

<br />
<br />

{% endblock %}