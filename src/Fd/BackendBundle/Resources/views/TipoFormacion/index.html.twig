{% extends 'BackendBundle::layout.html.twig' %}

{% block title %}
    {{ parent() }} - Lista de TipoFormacion
{% endblock %}

{% block main_content %}

    <h1>Lista de tipos de formación</h1>

    <div class="boton_verde float_derecha">

        <a href="{{ path('backend_tipo_formacion_new') }}">
            Crear nuevo registro
        </a>
    </div>
    <span class="limpiar_float"></span>
    <br />
    <br />
    <table class="grilla">
        <thead>
            <tr>
                <th>Id</th>
                <th>Código</th>
                <th>Descripción</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('backend_tipo_formacion_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.codigo }}</td>
                    <td>{{ entity.descripcion }}</td>
                    <td>
                        <a href="{{ path('backend_tipo_formacion_edit', { 'id': entity.id }) }}">
                            Editar
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <br />
    <br />


{% endblock %}
