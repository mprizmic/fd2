{% extends 'BackendBundle::layout.html.twig' %}
 
{% block main_content %}

<h1>Editar Título</h1>

<form action="{{ path('backend_titulo_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    <div class="ancho_15">
    {{ form_widget(edit_form) }}
        <br />
    </div>
        <div class="float_izquierda separador">
            <button type="submit">Guardar</button>
        </div>
</form>

<form action="{{ path('backend_titulo_delete', { 'id': entity.id }) }}" method="post">
    {{ form_widget(delete_form) }}
    <span class="float_izquierda separador">
        <input type="submit" class="boton_rojo" value="Eliminar" onsubmit="return confirm('Está seguro?')" />
    </span>
</form>

<a href="{{ path('backend_titulo_buscar') }}">
    Volver
</a>

<span class="limpiar_float"></span>

<br />
<br />

{% endblock %}