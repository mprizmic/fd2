{% extends 'BackendBundle::layout.html.twig' %}

{% block title %}
    {{ parent() }} - Editar Matrícula
{% endblock %}

{% block main_content %}
    {{ parent() }}

    <div class="titulo">Editar Matrícula</div>
    <br />

    {% set unidad_oferta = entity.unidadOferta %}

    <fieldset>
        <legend>
            {{ unidad_oferta.localizacion.establecimientoEdificio ~ ' - '}}
            {{ unidad_oferta.ofertas.carrera.identificacion }}
        </legend>
        <span class="mediana resaltado">
            {{ 'Año ' ~ entity.anio }}
        </span>
        {{ form_errors(edit_form) }}
        <form action="{{ path('backend_cohorte_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
            <table>
                <tr>
                    <td>
                        {{ form_label(edit_form.matricula) }}
                    </td>
                    <td>
                        {{ form_errors(edit_form.matricula) }}
                        {{ form_widget(edit_form.matricula, {'attr':{'class':'input_talle_05'} } ) }}
                    </td>    
                </tr>
                <tr>
                    <td>
                        {{ form_label(edit_form.matricula_ingresantes) }}
                    </td>
                    <td>
                        {{ form_errors(edit_form.matricula_ingresantes) }}
                        {{ form_widget(edit_form.matricula_ingresantes, {'attr':{'class':'input_talle_05'} } ) }}
                    </td>    
                </tr>
                <tr>
                    <td>
                        {{ form_label(edit_form.egreso) }}
                    </td>
                    <td>
                        {{ form_errors(edit_form.egreso) }}
                        {{ form_widget(edit_form.egreso, {'attr':{'class':'input_talle_05'} } ) }}
                    </td>    
                </tr>
            </table>
    </fieldset>

    {{ form_rest(edit_form) }}        

    <br />
    <button type="submit">Guardar</button>
</form>

<span class="float_derecha">
    <form class="en_bloque" action="{{ path('backend_cohorte_delete', { 'id': entity.id }) }}" onsubmit="return confirm('Está seguro?')" method="post">
        {{ form_widget(delete_form) }}
        <button type="submit" class="boton_rojo">Eliminar</button>
        <a class="separador" href="{{ path('backend_cohorte') }}">Volver a la lista</a>
    </form>
</span>

<br />
<br />

{% endblock %}