{% extends 'BackendBundle::layout.html.twig' %}

{% block title %}
    {{ parent() }} - Editar CargoAutoridad
{% endblock %}

{% block main_content %}

    <h1>Editar un cargo</h1>

    <form action="{{ path('backend_cargo_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <div class="ancho_10">
            {{ form_widget(edit_form) }}
        </div>
        <div class="separador">
            <button type="submit">Guardar</button>
        </div>
    </form>

    <form action="{{ path('backend_cargo_delete', { 'id': entity.id }) }}" method="post">
        {{ form_widget(delete_form) }}
        <button class="separador boton_rojo" type="submit">Eliminar</button>
        <a class="separador" href="{{ path('backend_cargo') }}">
            Volver a la lista
        </a>
    </form>

    <br />

{% endblock %}