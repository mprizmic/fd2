{% extends 'BackendBundle::layout.html.twig' %}

{% block title %}
    {{ parent() }} - Editar Inspector
{% endblock %}

{% block main_content %}
    {{ parent() }}
    
    <h1>Editar un inspector de infraestructura</h1>

    <form action="{{ path('backend_inspector_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <div class="ancho_10">
            {{ form_widget(edit_form) }}
        </div>
        <p class="separador" >
            <button type="submit">Guardar</button>
        </p>
    </form>

    <form action="{{ path('backend_inspector_delete', { 'id': entity.id }) }}" method="post">
        {{ form_widget(delete_form) }}
        <button class="boton_rojo separador" type="submit" >Eliminar</button>
        <a class="separador" href="{{ path('backend_inspector') }}">
            Volver a la lista
        </a>
    </form>
    <br />
    <br />
    <br />
{% endblock %}