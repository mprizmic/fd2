{% extends 'BackendBundle::layout.html.twig' %}

{% block main_content %}

    {{ parent() }}


    <h1>Lista de recursos de establecimientos</h1>

    <div class="boton_verde float_derecha">

        <a href="{{ path('recurso_new') }}">
            Crear nuevo recurso
        </a>
    </div>
    <span class="limpiar_float"></span>

    <br />
    <br />
    <table class="grilla">
        <thead>
            <tr>
                <th>Id</th>
                <th>Codigo</th>
                <th>Descripcion</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('recurso_edit', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.codigo }}</td>
                    <td>{{ entity.descripcion }}</td>
                    <td>
                        <a href="{{ path('recurso_edit', { 'id': entity.id }) }}">Editar</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>


    <br />
    <br />

{% endblock %}
