{% extends 'BackendBundle::layout.html.twig' %}
 
{% block main_content %}

<h1>Lista de recursos de establecimientos</h1>

<ul>
    <li>
        <a href="{{ path('recurso_new') }}">
            Crear nuevo registro
        </a>
    </li>
</ul>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Codigo</th>
            <th>Descripcion</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('recurso_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.codigo }}</td>
            <td>{{ entity.descripcion }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('recurso_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>


<a class="float_derecha" href="{{ path('fd_backend_default_portada') }}">
    Volver a la portada
</a>

<br />
<br />

{% endblock %}
