{% extends 'BackendBundle::layout.html.twig' %}

{% block main_content %}
    {{ parent() }}

    <h1>Editar un recurso/laboratorio</h1>


    <form action="{{ path('recurso_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <div class="ancho_10">
            {{ form_widget(edit_form) }}
        </div>
            <p>
                <button type="submit">Guardar</button>
            </p>
    </form>

    <form action="{{ path('recurso_delete', { 'id': entity.id }) }}" method="post">
        {{ form_widget(delete_form) }}
        <button class="boton_rojo" type="submit">Eliminar</button>
        <a class="separador" href="{{ path('recurso') }}">
            Volver a la lista
        </a>
    </form>

    <span class="limpiar_float"></span>

    <br />
    <br />

{% endblock %}