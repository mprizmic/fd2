{% extends 'BackendBundle::layout.html.twig' %}

{% block title %}
    {{ parent() }} - Editar DomicilioLocalizacion
{% endblock %}

{% block main_content %}
    {{ parent() }}

    <div class="titulo">Editar un domicilio de un nivel de un establecimiento</div>
    <br />

    <form action="{{ path('backend_domicilio_localizacion_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <div class="ancho_10">
            {{ form_widget(edit_form) }}
        </div>
        <p class="separador">
            <button type="submit">Guardar</button>
        </p>
    </form>

    <form action="{{ path('backend_domicilio_localizacion_delete', { 'id': entity.id }) }}" method="post">
        {{ form_widget(delete_form) }}
        <button type="submit" class="separador boton_rojo">Eliminar</button>
        <a class="separador" href="{{ path('backend_domicilio_localizacion') }}">
            Volver a la lista
        </a>
    </form>
    <br />
    <br />
{% endblock %}