{% extends 'BackendBundle::layout.html.twig' %}
 
{% block title %}
{{ parent() }} - Editar Glosario
{% endblock %}
 
{% block main_content %}
{{ parent() }}

<h1>Editar Glosario</h1>

<form action="{{ path('backend_glosario_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Guardar</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('backend_glosario') }}">
            Volver a la lista
        </a>
    </li>
    <li>
        <form action="{{ path('backend_glosario_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit" class="boton_rojo">Eliminar</button>
        </form>
    </li>
</ul>

{% endblock %}