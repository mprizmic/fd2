{% extends 'form_div_layout.html.twig' %}
 
{% block form_row %}
{% spaceless %}
    <div>
        {{ form_label(form) }}
        {{ form_widget(form) }}
    </div>
{% endspaceless %}
{% endblock form_row %}

{#----------------------------------------------------#}
{% block form_widget_simple %}
{% spaceless %}
    <span style="display:inline-block;">
        {{ block('form_errors') }}
        {% if help %}
            <span class="help-block">{{ help }}</span>
            <br />
        {% endif %}
        {{ parent() }}
    </span>
{% endspaceless %}
{% endblock form_widget_simple %}
{#----------------------------------------------------#}
{% block form_errors %}
    {% if errors|length > 0 %}
    <ul >
        {% for error in errors %}
            <li class="mensaje_error_campo">Atenci√≥n:&nbsp;{{
                error.messagePluralization is null
                    ? error.messageTemplate|trans(error.messageParameters, 'validators')
                    : error.messageTemplate|transchoice(error.messagePluralization, error.messageParameters, 'validators')
            }}</li>
        {% endfor %}
    </ul>
    {% endif %}
{% endblock form_errors %}
{#----------------------------------------------------#}
{% block date_widget %}
{% spaceless %}
    {% if widget == 'single_text' %}
        {{ block('form_widget_simple') }}
    {% else %}
        <span style="display:inline-block;">
        {% if help %}
            <span class="help-block">{{ help }}</span><br />
        {% endif %}
        {{ form_widget(form.day) }} /
        {{ form_widget(form.month) }} /
        {{ form_widget(form.year) }}
        </span>
    {% endif %}
{% endspaceless %}
{% endblock date_widget %}
{#----------------------------------------------------#}
{# Labels : tiene el asterisco para requeridos #}
{% block form_label %}
{% spaceless %}
    {% if not compound %}
        {% set label_attr = label_attr|merge({'for': id}) %}
    {% endif %}
    {% if required %}
        {% set label_attr = label_attr|merge({'class': (label_attr.class|default('') ~ ' required')|trim}) %}
    {% endif %}
    {% if label is empty %}
        {% set label = name|humanize %}
    {% endif %}
    <label{% for attrname, attrvalue in label_attr %} {{ attrname }}="{{ attrvalue }}"{% endfor %}>{% if required %}*{% endif %}{{ label|trans({}, translation_domain) }}</label>
{% endspaceless %}
{% endblock form_label %}
{#----------------------------------------------------#}